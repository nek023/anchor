{
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "mocha": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 7,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "experimentalObjectRestSpread": true
    }
  },
  "globals": {
    "chrome": true
  },
  "plugins": [
    "react"
  ],
  "rules": {
    "arrow-parens": [2],
    "no-console": [0],
    "no-unused-vars": [1],
    "semi": [2, "always"]
  }
}
